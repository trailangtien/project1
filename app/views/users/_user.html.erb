<li>
  <%= gravatar_for user, size: 50 %>
  <%= user.name%>
  <%= link_to user.name, user %>
  <% if current_user.is_admin? && !current_user?(user) %>
    | <%= link_to "", user, :class => "glyphicon glyphicon-trash", method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
